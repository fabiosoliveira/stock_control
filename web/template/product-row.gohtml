{{define "ProductRow"}}
<tr id="product-{{.ID}}">
    <td>{{.ID}}</td>
    <td>{{.Name}}</td>
    <td>{{.Price}}</td>
    <td>{{.Stock}}</td>
    <td class="actions">
        <button onclick="editProduct({{.ID}})" class="edit">Editar</button>
        <button onclick="deleteProduct({{.ID}})" class="delete">Excluir</button>
    </td>
</tr>
{{end}}